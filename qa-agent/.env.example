# QA Agent Environment Variables
# Copy this file to .env and fill in your values

# Azure DevOps Configuration
AZURE_ORG=your-organization
AZURE_PROJECT=your-project
AZURE_PAT=your-personal-access-token
AZURE_ASSIGNED_TO=your.email@company.com

# Playwright Configuration
PLAYWRIGHT_HEADLESS=false
PLAYWRIGHT_SLOW_MO=500
PLAYWRIGHT_BROWSER=chromium
PLAYWRIGHT_TIMEOUT=30000

# Application Configuration
DEFAULT_APP=pega-app

# Applications JSON (for environment-based config)
# Format: [{"name":"app1","baseUrl":"url1",...},...]
# APPLICATIONS='[{"name":"pega-app","baseUrl":"https://pega-dev.company.com"}]'

# Test Generation Preferences
STEP_NAMING=Given/When/Then
SELECTOR_STRATEGY=role
INCLUDE_WAITS=true
INCLUDE_SCREENSHOTS=false
